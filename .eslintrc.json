{
    "extends": "eslint:recommended",
    "env": {
        "browser": true
    },
    "globals": {
        "Promise": false
    },
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "max-len": [
            2,
            80,
            2
        ],
        "key-spacing": [
            2,
            {"beforeColon": false, "afterColon": true}
        ],
        "no-multi-spaces": [
            2
        ],
        "space-unary-ops": [
            1,
            {"words": true, "nonwords": false}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-multiple-empty-lines": [
            2,
            {"max": 1}
        ],
        "no-undef": [
            2,
            {"typeof": true}
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": [
            2,
            "function"
        ]
    }
}